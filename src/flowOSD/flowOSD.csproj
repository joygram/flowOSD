<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0-windows</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWindowsForms>true</UseWindowsForms>
		<EnablePreviewFeatures>true</EnablePreviewFeatures>
	</PropertyGroup>
	
	<PropertyGroup>
		<Copyright>© 2021-2023, Albert Akhmetov</Copyright>
		<Authors>Albert Akhmetov</Authors>
		<Product>flowOSD</Product>
		<Version>2.0.0-dev30304</Version>
		<Platforms>x64</Platforms>
		<PackageIcon></PackageIcon>
		<PackageIconUrl />
		<ApplicationIcon>Resources\app.ico</ApplicationIcon>
		<Description>Utility that provides the ability to show OSD for ASUS notebooks events (like keyboard backlight changing, touchpad state and so on).</Description>
		<PackageReleaseNotes>This is an experimental release.</PackageReleaseNotes>
	</PropertyGroup>
	
	<PropertyGroup>
		<OutputPath>.\bin\$(Configuration)\</OutputPath>
	  	<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<LangVersion>10</LangVersion>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x64'">
		<PlatformTarget>x64</PlatformTarget>
		<Optimize>False</Optimize>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64'">
		<PlatformTarget>x64</PlatformTarget>
		<Optimize>True</Optimize>
	    <DebugType>none</DebugType>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="System.Reactive" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Resources\**\*.*" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="UI\ConfigPages\MonitoringConfigPage.cs">
	    <SubType>Component</SubType>
	  </Compile>
	</ItemGroup>
</Project>